<% layout("layouts/boilerplate.ejs") %>

<section class="container py-5">
  <h2 class="mb-4">My Bookings</h2>

  <% if (bookings.length === 0) { %>
    <p class="text-muted fst-italic">You have no bookings yet.</p>
  <% } else { %>
    <div class="table-responsive">
      <table class="table align-middle mb-0" style=" border-spacing: 0 0.5rem;">
        <thead>
          <tr>
            <th scope="col" class="border-0">Check-in</th>
            <th scope="col" class="border-0">Check-out</th>
            <th scope="col" class="border-0">Guests</th>
            <th scope="col" class="border-0">Amount Paid</th>
            <th scope="col" class="border-0 text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(booking => { %>
            <tr class="shadow-sm rounded bg-white">
              <td><%= booking.checkIn.toLocaleDateString() %></td>
              <td><%= booking.checkOut.toLocaleDateString() %></td>
              <td><%= booking.guests %></td>
              <td>â‚¹<%= booking.totalAmount.toFixed(2) %></td>
              <td class="text-center">
                <a href="/bookings/<%= booking._id %>/show" class="btn btn-sm btn-warning me-2">Show</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</section>

